<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_tags"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/read_txt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="阅读" />

            <TextView
                android:id="@+id/math"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="数学" />

            <TextView
                android:id="@+id/besar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="贝塞尔曲线" />

            <TextView
                android:id="@+id/fenbei"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="分贝" />

            <TextView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="地图" />

            <TextView
                android:id="@+id/delete_dir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="删除冗余文件夹" />

            <TextView
                android:id="@+id/constants"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="通讯录" />

            <TextView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="分享" />

            <TextView
                android:id="@+id/parse_xsl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="解析excel" />

            <TextView
                android:id="@+id/parse_url"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="爬虫测试" />

            <TextView
                android:id="@+id/normal_video"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="电影" />

            <TextView
                android:id="@+id/av_video"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="视频" />

            <TextView
                android:id="@+id/single_music"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="歌曲" />

            <TextView
                android:id="@+id/replace_bitmap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="去水印" />

            <TextView
                android:id="@+id/look_pic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="图片" />

            <TextView
                android:id="@+id/reader"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="读者" />

            <TextView
                android:id="@+id/js_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="js存储" />

            <TextView
                android:id="@+id/js_read"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="js读取" />

            <TextView
                android:id="@+id/android_q"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="androidQ notify" />

            <TextView
                android:id="@+id/src_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="加载圆图" />

            <TextView
                android:id="@+id/sd_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="sd卡" />

            <TextView
                android:id="@+id/selenium"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="selenium测试" />

            <TextView
                android:id="@+id/bazhuayu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="八爪鱼" />

            <TextView
                android:id="@+id/fanyiwenan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="翻译文案" />

            <TextView
                android:id="@+id/dabaoxiazai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="下载app" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>